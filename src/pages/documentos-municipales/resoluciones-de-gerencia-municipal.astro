---
import Layout from '../../layouts/BlogPost.astro';

const acuerdos = [
    { año: 2025, url: "https://www.gob.pe/institucion/municerroazul/colecciones/58457-resolucion-de-gerencia-municipal-2025" },
    { año: 2024, url: "https://www.gob.pe/institucion/municerroazul/colecciones/30341-resolucion-de-gerencia-municipal-2024" },
    { año: 2023, url: "https://www.gob.pe/institucion/municerroazul/colecciones/15826-resolucion-de-gerencia-municipal-2023" },
    { año: 2022, url: "https://www.gob.pe/institucion/municerroazul/colecciones/5664-resolucion-de-gerencia-municipal-2022" },
    { año: 2021, url: "https://www.gob.pe/institucion/municerroazul/colecciones/4027-resolucion-de-gerencia-municipal-2021" },
    { año: 2020, url: "https://www.gob.pe/institucion/municerroazul/colecciones/4017-resolucion-de-gerencia-municipal-2020" },
    { año: 2019, url: "https://www.gob.pe/institucion/municerroazul/colecciones/4009-resolucion-de-gerencia-municipal-2019" }
];
---

<Layout title="Resoluciones de Gerencia Municipal">
    <section class="municipality-documents flex flex-col items-center justify-center gap-2 my-[8rem] px-[1.2rem] md:w-[900px] xl:w-[1200px] mx-auto">
        <article class="municipality-documents-title mb-[3rem]">
            <h2 class="mb-[3rem] text-3xl md:text-4xl lg:text-5xl text-center font-semibold">
                Resoluciones de Gerencia Municipal
            </h2>
        </article>

        <article class="municipality-documents-information flex flex-col items-center justify-center gap-8 md:grid md:grid-cols-2 md:place-items-center xl:grid-cols-3">
            {acuerdos.map((acuerdo) => (
                <a class="border border-[#015da8] px-4 py-2 rounded-[var(--border-radius)] transition-all duration-300 ease-in-out xl:hover:scale-110"
                   href={acuerdo.url}>
                    Resoluciones de Gerencia Municipal - <b>año {acuerdo.año}</b>
                </a>
            ))}
        </article>
    </section>
</Layout>