---
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/muni-cerro-azul.avif" />

        <!-- Verification Google Search Console -->
        <meta name="google-site-verification" content="LgbeTZjGwpuOTRcEbUYLxV7H0uMZl2CX6jsHlcC7jwg" />

        <script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "GovernmentOrganization",
				"name": "Municipalidad Distrital de Cerro Azul",
				"url": "https://www.municerroazul.gob.pe",
				"logo": "https://www.municerroazul.gob.pe/muni-cerro-azul.avif",
				"description": "Portal web oficial de la Municipalidad Distrital de Cerro Azul.",
				"address": {
					"@type": "PostalAddress",
					"streetAddress": "Calle Alfonso Ugarte 500",
					"addressLocality": "Cerro Azul",
					"addressRegion": "Lima",
					"postalCode": "15716",
					"addressCountry": "PE"
				},
				"openingHoursSpecification": {
					"@type": "OpeningHoursSpecification",
					"dayOfWeek": [
						"Tuesday",
						"Wednesday",
						"Thursday",
						"Friday",
						"Saturday"
					],
					"opens": "08:00",
					"closes": "16:45"
				},
				"contactPoint": {
					"@type": "ContactPoint",
					"telephone": "+51 123-456-789",
					"contactType": "customer service",
					"availableLanguage": ["Spanish"]
				},
				"areaServed": {
					"@type": "AdministrativeArea",
					"name": "Cerro Azul, Lima, Perú"
				},
				"department": "Gobierno Local",
				"sameAs": [
					"https://www.facebook.com/MunicipalidadDistritalDeCerroAzul"
				]
			}
		</script>

        <title>Municipalidad Distrital de Cerro Azul</title>
    </head>
    <body>
        <section class="start flex flex-col items-center justify-center text-center">
            <article class="start-information flex flex-col items-center justify-between text-center">
                <h2 class=
                "text-xl text-white
                md:text-2xl
                xl:text-3xl">
                Municipalidad Distrital de Cerro Azul
                </h2>
                <h1 class=
                "text-[43px] text-white font-semibold
                md:text-8xl
                xl:text-9xl">
                Jose Pain García
                </h1>
                <a href="/municipalidad/informacion-municipal"
                    class=
                    "button-start
					min-w-[250px] py-2 text-white font-semibold text-xl flex items-center justify-center gap-4
                    md:text-2xl
                    lg:text-2xl
                    xl:text-2xl">
                    Ingresar
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m12.75 15 3-3m0 0-3-3m3 3h-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                    </svg>
                </a>
            </article>
        </section>
    </body>
</html>
