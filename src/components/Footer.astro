---

<footer>
	<section class="footer-container w-full flex flex-col p-8 pb-6 bg-[var(--color-azul-claro)] text-white text-center md:w-full md:grid md:[grid-template-columns:50%_50%] md:gap-4 xl:grid xl:[grid-template-columns:20%_20%_30%_28%] xl:gap-4">
		<article class="footer-municipal mt-4 mb-7">
			<div>
				<h2 class="text-xl text-left font-semibold mb-7">Normas municipales</h2>
				<ul class="text-left space-y-2 text-lg">
					{municipalRegulations.map((municipalRegulations) => (
						<li class="group transition-transform duration-500 ease-in-out hover:font-semibold hover:translate-x-2">
							<a href={ municipalRegulations.url }>{ municipalRegulations.title }</a>
						</li>
					))}
				</ul>
			</div>
		</article>
		<article class="footer-municipal mt-4 mb-7">
			<div>
				<h2 class="text-xl text-left font-semibold mb-7">Instrumentos de gestión</h2>
				<ul class="text-left space-y-2 text-lg">
					{managementInstruments.map((managementInstruments => (
						<li class="group transition-transform duration-500 ease-in-out hover:font-semibold hover:translate-x-2">
							<a href={managementInstruments.url}>{managementInstruments.title}</a>
						</li>
					)))}
				</ul>
			</div>
		</article>
		<article class="footer-municipal link-interest mt-4">
			<div>
				<h2 class="text-xl text-left font-semibold mb-7">Enlaces de interés</h2>
				<ul class="text-left space-y-2 text-lg">
					{linksOfInterest.map((linksOfInterest) => (
						<li class="group transition-transform duration-500 ease-in-out hover:font-semibold hover:translate-x-2">
							<a href={linksOfInterest.url}>{linksOfInterest.title}</a>
						</li>
					))}
				</ul>
			</div>
		</article>
		<article class="footer-municipal flex flex-col gap-8 mt-4 mb-7 text-left text-lg">
			<div>
				<h2 class="text-xl font-semibold mb-7">Horario de atención:</h2>
